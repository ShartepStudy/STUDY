#ifndef COMMAND_H
#define COMMAND_H

#include "macros.h"

namespace sokoban {

class GamePole;

class Command {
public:
  Command();
  virtual ~Command() {}
  
  virtual bool Execute() const = 0;
  virtual bool UnExecute() const = 0;

  static bool SetGamePole(GamePole* game_pole);
protected:
  GamePole& pole() { return *game_pole_; }
  int x_;
  int y_;

  bool with_box_;
private:
  static GamePole* game_pole_;

  DISALLOW_ASSIGN(Command);
};

}   // namespace sokoban

#endif    //  COMMAND_H